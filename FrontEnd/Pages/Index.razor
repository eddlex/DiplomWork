@page "/"
@using Microsoft.JSInterop.WebAssembly


<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4">
        <h3 class="text-center mb-4">Login</h3>

        <EditForm Model="@_model" OnSubmit="Authorize">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="username">Username:</label>
                <InputText id="username" @bind-Value="@_model.LogIn" class="form-control" />
                <ValidationMessage For="@(() => _model.LogIn)" />
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <InputText id="password" @bind-Value="@_model.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => _model.Password)" />
            </div>

            <button type="submit" class="btn btn-primary btn-block">Login</button>
            
        </EditForm>
    </div>
</div>



