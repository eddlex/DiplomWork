@page "/index"
@using FrontEnd.Model
@using FrontEnd.Shared.Dialog



@inject IDialogService DialogService


<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@OpenDialog">Open Dialog</MudButton>


@code
{
    
    private void OpenDialog()
    {
        if (Snackbar == null)
            return;
        Snackbar.Configuration.VisibleStateDuration = 2;
        Snackbar.Configuration.SnackbarVariant = Variant.Filled;   
        Snackbar.Configuration.MaxDisplayedSnackbars = 10;
        Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
        Snackbar.Configuration.ShowCloseIcon = true;
        Snackbar.Add($"Error {"TEST ERROR"}", Severity.Error);
    // var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Large, Position = DialogPosition.Center };
    // DialogService.Show<DialogComponent<Recipient>>("Add New Game", options);           
    }
}