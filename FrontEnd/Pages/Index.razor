@page "/index"
@using FrontEnd.Model
@using FrontEnd.Shared.Dialog



@inject IDialogService DialogService

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@OpenDialog">Open Dialog</MudButton>


@code
{
    
    private void OpenDialog()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Large, Position = DialogPosition.Center };
        DialogService.Show<DialogComponent<Recipient>>("Add New Game", options);           
    }
}